# -------------------------------
# Tarmonia project .gitignore
# Purpose: ignore runtime files, editor/OS artifacts,
# build outputs, and dependency/vendor directories.
# -------------------------------

# OS files
.DS_Store
Thumbs.db
ehthumbs.db
Desktop.ini

# IDE / Editor
/.idea/
/.vscode/
*.sublime-workspace
*.sublime-project
*.iml
*.swp

# Node / JS
/node_modules/
/dist/
/build/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*

# PHP dependencies
/vendor/
composer.phar

# Composer / PHPUnit caches
/.phpunit.result.cache
/.phpunit.cache
/.php_cs.cache

# Environment / secrets
.env
.env.local
.env.*.local
.env.backup
.env.testing

# Logs and runtime files
/logs/
*.log
includes/email_log.txt

# Build / bundler artifacts
/dist/
/public/dist/
/public/build/
/.cache/
.sass-cache/

# SQL / DB dumps and DB files
*.sql.gz
*.sql.tar
*.sqlite
*.sqlite3

# Coverage reports
/coverage/
phpunit.coverage.*

# Temp / caches
/tmp/
/temp/
*.cache

# OS X metadata
Icon?

# Vagrant / Homestead
/.vagrant/
Homestead.yaml
Homestead.json

# Misc
*.bak
*.orig
*.rej
~*
/.env.local.php

# Ignore node lock files if you prefer them untracked (optional)
# package-lock.json
# yarn.lock
includes/cart_error.log
logs/admin.log
